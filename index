        // Fun√ß√£o para mostrar/ocultar campos de crian√ßas
        function updateChildFields() {
            if (eventOptionSelect.value === 'Festa Infantil') {
                childFieldsDiv.classList.add('show');
            } else {
                childFieldsDiv.classList.remove('show');
            }
        }

        // Fun√ß√£o principal de c√°lculo
        function calculate() {
            try {
                // Valida√ß√£o dos campos obrigat√≥rios
                if (!clientNameInput.value || !eventDateInput.value || !eventTypeSelect.value || !eventOptionSelect.value) {
                    alert("Por favor, preencha todos os campos obrigat√≥rios.");
                    return;
                }

                let totalGuests;
                if (eventOptionSelect.value === 'Festa Infantil') {
                    const adults = parseInt(adultsInput.value) || 0;
                    const children = parseInt(childrenInput.value) || 0;
                    
                    if (adults < 0 || children < 0) {
                        alert("Para Festa Infantil, preencha valores v√°lidos para adultos e crian√ßas.");
                        return;
                    }
                    
                    totalGuests = adults + children;
                    guestsInput.value = totalGuests;
                } else {
                    totalGuests = parseInt(guestsInput.value) || 0;
                    
                    if (totalGuests <= 0) {
                        alert("Por favor, informe um n√∫mero v√°lido de convidados.");
                        return;
                    }
                }

                const horasEvento = parseInt(eventHoursSelect.value);
                
                // Fatores de aumento (5h = +8%, 6h = +15%)
                let foodFactor, beverageFactor;
                if (horasEvento === 5) {
                    foodFactor = 1.08;
                    beverageFactor = 1.08;
                } else if (horasEvento === 6) {
                    foodFactor = 1.15;
                    beverageFactor = 1.15;
                } else {
                    foodFactor = 1.0;
                    beverageFactor = 1.0;
                }

                // Limpar resultados anteriores
                resultTextDiv.innerHTML = '';

                // Cabe√ßalho
                addResultLine('='.repeat(70));
                addResultLine('OR√áAMENTO PARA EVENTO - BUFFET CALCULATOR PRO'.padStart(55));
                addResultLine('='.repeat(70));
                addResultLine('');

                addResultLine(`Cliente:`.padEnd(20) + clientNameInput.value);
                addResultLine(`Data do Evento:`.padEnd(20) + eventDateInput.value);
                addResultLine(`Tipo de Evento:`.padEnd(20) + eventTypeSelect.value);
                addResultLine(`Op√ß√£o de Evento:`.padEnd(20) + eventOptionSelect.value);
                addResultLine(`Total Convidados:`.padEnd(20) + totalGuests);
                
                if (eventOptionSelect.value === 'Festa Infantil') {
                    addResultLine(`Adultos:`.padEnd(20) + adultsInput.value);
                    addResultLine(`Crian√ßas:`.padEnd(20) + childrenInput.value);
                }
                
                addResultLine(`Dura√ß√£o:`.padEnd(20) + `${horasEvento} horas`);
                addResultLine('');
                addResultLine('='.repeat(70));
                addResultLine('ITENS NECESS√ÅRIOS'.padStart(55));
                addResultLine('='.repeat(70));
                addResultLine('');

                // Calcular itens principais
                const option = eventOptionSelect.value;
                if (option in eventData) {
                    addResultLine(`\n${option.toUpperCase()}`);
                    addResultLine('-'.repeat(70));
                    
                    if (option === 'Festa Infantil') {
                        calculateChildParty(totalGuests, foodFactor);
                    } else if (option === 'Coquetel') {
                        calculateCoquetel(totalGuests, foodFactor);
                    } else {
                        calculateStandardEvent(option, totalGuests, foodFactor);
                    }
                }

                // Bebidas
                if (includeNonAlcoholCheckbox.checked) {
                    addResultLine('\nBEBIDAS N√ÉO ALCO√ìLICAS');
                    addResultLine('-'.repeat(70));
                    calculateBeverages('Bebidas N√£o Alco√≥licas', totalGuests, beverageFactor);
                }
                
                if (includeAlcoholCheckbox.checked) {
                    addResultLine('\nBEBIDAS ALCO√ìLICAS');
                    addResultLine('-'.repeat(70));
                    calculateBeverages('Bebidas Alco√≥licas', totalGuests, beverageFactor);
                }

                // Utens√≠lios
                if (includeUtensilsCheckbox.checked) {
                    addResultLine('\nUTENS√çLIOS');
                    addResultLine('-'.repeat(70));
                    calculateUtensils(totalGuests);
                }

                // Mobili√°rio
                if (includeFurnitureCheckbox.checked) {
                    addResultLine('\nMOBILI√ÅRIO');
                    addResultLine('-'.repeat(70));
                    calculateFurniture(totalGuests);
                }

                // Pessoal
                addResultLine('\nPESSOAL NECESS√ÅRIO');
                addResultLine('-'.repeat(70));
                calculateStaff(totalGuests);

                alert("C√°lculos conclu√≠dos com sucesso!");
                
            } catch (error) {
                alert(`Ocorreu um erro: ${error.message}`);
            }
        }

        // Fun√ß√µes auxiliares para c√°lculo
        function calculateStandardEvent(eventType, guests, factor) {
            const data = eventData[eventType];
            
            for (const [item, value] of Object.entries(data)) {
                if (typeof value === 'object' && value !== null && 'quantidade' in value) {
                    const quant = value.quantidade;
                    const unit = value.unidade;
                    const total = quant * guests * factor;
                    addResultLine(`- ${item}: ${quant} ${unit}/pessoa ‚Üí Total: ${total.toFixed(2)} ${unit}`);
                } else if (typeof value === 'object' && value !== null) {
                    // Para compatibilidade com outros itens que usam o formato antigo
                    const quant = value.quantidade;
                    const unit = value.unidade;
                    const total = quant * guests;
                    addResultLine(`- ${item}: ${quant} ${unit}/pessoa ‚Üí Total: ${total.toFixed(2)} ${unit}`);
                } else {
                    if (item.toLowerCase().includes('ou')) {
                        addResultLine(`- ${item}`);
                    } else {
                        const quant = value;
                        const total = quant * guests * factor;
                        const unit = quant < 1 ? "Kg" : "Unidades";
                        addResultLine(`- ${item}: ${quant} ${unit}/pessoa ‚Üí Total: ${total.toFixed(2)} ${unit}`);
                    }
                }
            }
        }

        function calculateChildParty(totalGuests, factor) {
            const adults = parseInt(adultsInput.value) || 0;
            const children = parseInt(childrenInput.value) || 0;
            
            const data = eventData['Festa Infantil'];
            
            const items = {
                "Bebidas": ["Sucos/Refrigerantes (Adultos)", "Sucos/Refrigerantes (Crian√ßas)", "Caf√© (Adultos)"],
                "Salgados": ["Mini Sandu√≠ches (Adultos)", "Mini Sandu√≠ches (Crian√ßas)", "Salgadinhos (Adultos)", "Salgadinhos (Crian√ßas)"],
                "Outros": ["Saladas (Adultos)", "Saladas (Crian√ßas)", "Frutas (Adultos)", "Frutas (Crian√ßas)", 
                          "Bolo (Adultos)", "Bolo (Crian√ßas)", "Docinho (Adultos)", "Docinho (Crian√ßas)", 
                          "Pipoca (Adultos)", "Pipoca (Crian√ßas)"]
            };
            
            for (const [category, itemList] of Object.entries(items)) {
                addResultLine(`\n${category.toUpperCase()}:`);
                for (const item of itemList) {
                    const quant = data[item];
                    let total;
                    if (item.includes("(Adultos)")) {
                        total = quant * adults * factor;
                    } else {
                        total = quant * children * factor;
                    }
                    
                    let unit;
                    if (item.toLowerCase().includes('suco') || item.toLowerCase().includes('refrigerante') || item.toLowerCase().includes('caf√©')) {
                        unit = "Litros";
                    } else if (item.toLowerCase().includes('sandu√≠ches') || item.toLowerCase().includes('salgadinhos') || item.toLowerCase().includes('docinho')) {
                        unit = "Unidades";
                    } else {
                        unit = "Kg";
                    }
                    
                    const displayItem = item.replace("(Adultos)", "").replace("(Crian√ßas)", "").trim();
                    addResultLine(`- ${displayItem}: ${quant} ${unit}/pessoa ‚Üí Total: ${total.toFixed(2)} ${unit}`);
                }
            }
        }

        function calculateCoquetel(guests, factor) {
            const option = eventOptionSelect.value;
            
            addResultLine("Escolha uma das op√ß√µes de coquetel:");
            
            for (const [coqType, items] of Object.entries(eventData[option])) {
                addResultLine(`\n${coqType}:`);
                for (const [item, quant] of Object.entries(items)) {
                    const total = quant * guests * factor;
                    addResultLine(`- ${item}: ${quant} Unidades/pessoa ‚Üí Total: ${total.toFixed(0)} Unidades`);
                }
            }
        }

        function calculateBeverages(beverageType, guests, factor) {
            const data = eventData[beverageType];
            
            for (const [item, quant] of Object.entries(data)) {
                const total = quant * guests * factor;
                // Todas as bebidas agora em litros
                addResultLine(`- ${item}: ${quant} Litros/pessoa ‚Üí Total: ${total.toFixed(2)} Litros`);
            }
        }

        function calculateUtensils(guests) {
            const data = eventData['Utens√≠lios'];
            
            for (const [item, quant] of Object.entries(data)) {
                let total = quant * guests;
                const unit = "Unidades";
                if (item.includes("X√≠caras (buffet)")) {
                    total = total / 2;
                }
                addResultLine(`- ${item}: ${quant} ${unit}/pessoa ‚Üí Total: ${total.toFixed(0)} ${unit}`);
            }
        }

        function calculateFurniture(guests) {
            const data = eventData['Mobili√°rio'];
            
            for (const [item, quant] of Object.entries(data)) {
                let total = quant * guests;
                if (item.includes("Mesas") || item.includes("Pranch√£o")) {
                    total = Math.ceil(total);
                }
                addResultLine(`- ${item}: ${quant} Unidades/pessoa ‚Üí Total: ${total.toFixed(0)} Unidades`);
            }
        }

        function calculateStaff(guests) {
            const waiters = Math.ceil(guests / 20);
            addResultLine(`- Gar√ßons: 1 para cada 20 convidados ‚Üí Total: ${waiters}`);
            
            const cooks = Math.ceil(guests / 50);
            addResultLine(`- Cozinheiros: 1 para cada 50 convidados ‚Üí Total: ${cooks}`);
        }

        // Fun√ß√£o para imprimir relat√≥rio
        function printReport() {
            if (!resultTextDiv.textContent.trim()) {
                alert("Nenhum resultado para imprimir. Execute os c√°lculos primeiro.");
                return;
            }
            window.print();
        }

        // Fun√ß√£o para adicionar linha ao resultado
        function addResultLine(text) {
            resultTextDiv.innerHTML += text + '\n';
        }

        // Fun√ß√£o para limpar campos
        function clearFields() {
            clientNameInput.value = '';
            eventDateInput.value = '';
            eventTypeSelect.value = '';
            eventOptionSelect.value = '';
            guestsInput.value = '100';
            eventHoursSelect.value = '4';
            adultsInput.value = '0';
            childrenInput.value = '0';
            includeNonAlcoholCheckbox.checked = true;
            includeAlcoholCheckbox.checked = false;
            includeUtensilsCheckbox.checked = true;
            includeFurnitureCheckbox.checked = false;
            resultTextDiv.innerHTML = '';
            childFieldsDiv.classList.remove('show');
        }
    </script>
</body>
</html>
